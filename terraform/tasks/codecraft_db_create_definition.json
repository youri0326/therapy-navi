[
  {
    "name": "backend-container",
    "image": "031741671403.dkr.ecr.ap-northeast-1.amazonaws.com/code-craft-backend",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "db-create",
        "awslogs-group": "/ecs/db-create"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 3000,
        "hostPort": 3000
      }
    ],
    "command": ["bundle", "exec", "rails", "db:migrate"],
    "environment": [
      {
        "name": "FRONTEND_DOMAIN",
        "value": "https://codecraftapp.com"
      },
      {
        "name": "BACKEND_URL",
        "value": "https://codecraftapp.net"
      },
      {
        "name": "WORKDIR",
        "value": "app"
      },
      {
        "name": "CONTAINER_PORT",
        "value": "3000"
      },
      {
        "name": "RAILS_ENV",
        "value": "production"
      }
    ],
    "secrets": [
      {
        "name": "AWS_ACCESS_KEY_ID",
        "valueFrom": "access_key_id"
      },
      {
        "name": "AWS_SECRET_ACCESS_KEY",
        "valueFrom": "secret_access_key"
      },
      {
        "name": "RAILS_MASTER_KEY",
        "valueFrom": "codecraft_rails_master_key"
      },
      {
        "name": "DATABASE_HOST",
        "valueFrom": "db-host"
      },
      {
        "name": "DATABASE_NAME",
        "valueFrom": "db-name"
      },
      {
        "name": "DATABASE_USERNAME",
        "valueFrom": "db-username"
      },
      {
        "name": "DATABASE_PASSWORD",
        "valueFrom": "db-password"
      }
    ]
  }
]